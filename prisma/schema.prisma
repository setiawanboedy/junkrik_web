// Prisma schema for user (bisnis)
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String   @id @default(uuid())
  email       String   @unique
  password    String
  businessName String
  address     String
  phone       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  wasteType   String?   // Jenis sampah, contoh: "plastik, organik"
  wasteVolume Int?      // Volume sampah per hari (kg)
  role        String?   // Opsional: tipe user (misal: bisnis, admin)
  // Tambahkan field lain sesuai kebutuhan bisnis
}
